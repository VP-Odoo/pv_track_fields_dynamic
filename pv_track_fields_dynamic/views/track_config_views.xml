<odoo>
  <record id="view_track_fields_config_list" model="ir.ui.view">
    <field name="name">track.fields.config.list</field>
    <field name="model">track.fields.config</field>
    <field name="arch" type="xml">
      <list string="Dynamic Tracking Configurations">
        <field name="active"/>
        <field name="company_id"/>
        <field name="model_id"/>
        <field name="field_ids" widget="many2many_tags"/>
      </list>
    </field>
  </record>

  <record id="view_track_fields_config_form" model="ir.ui.view">
    <field name="name">track.fields.config.form</field>
    <field name="model">track.fields.config</field>
    <field name="arch" type="xml">
      <form string="Dynamic Field Tracking">
        <sheet>
          <group>
            <field name="active"/>
            <field name="company_id" options="{'no_create': True}"/>
            <field name="model_id" options="{'no_create': True}"/>
            <field name="field_ids" widget="many2many_tags"/>
          </group>
          <group string="Options">
            <field name="exclude_empty_changes"/>
            <field name="show_old_values"/>
            <field name="show_new_values"/>
            <field name="group_changes_per_record"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_track_fields_config" model="ir.actions.act_window">
    <field name="name">Dynamic Field Tracking</field>
    <field name="res_model">track.fields.config</field>
    <!-- IMPORTANT: 'list,form' in Odoo 18 -->
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
  </record>
</odoo>
